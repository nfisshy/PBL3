@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Buyer Menu</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:600,700&display=swap" rel="stylesheet">
    <style>
        body {
            background: #f5f6fa;
            font-family: 'Montserrat', Arial, sans-serif;
        }
        .buyer-menu-container {
            width: 340px;
            margin: 40px auto;
            background: #111;
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.15);
            padding: 0;
            overflow: hidden;
        }
        .buyer-profile {
            display: flex;
            align-items: center;
            padding: 24px 24px 12px 24px;
            border-bottom: 1px solid #222;
            background: #111;
        }
        .buyer-avatar {
            width: 64px;
            height: 64px;
            border-radius: 50%;
            background: #222;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 18px;
            border: 2px solid #27ae60;
        }
        .buyer-avatar img {
            width: 48px;
            height: 48px;
            border-radius: 50%;
        }
        .buyer-info {
            color: #fff;
        }
        .buyer-info .title {
            font-size: 1rem;
            color: #aaa;
            margin-bottom: 2px;
        }
        .buyer-info .name {
            font-size: 1.25rem;
            font-weight: 700;
            color: #27ae60;
        }
        .buyer-menu-list {
            list-style: none;
            margin: 0;
            padding: 0;
        }
        .buyer-menu-list li {
            border-bottom: 1px solid #222;
        }
        .buyer-menu-list li:last-child {
            border-bottom: none;
        }
        .buyer-menu-link {
            display: block;
            padding: 18px 24px;
            color: #fff;
            text-decoration: none;
            font-size: 1.08rem;
            font-weight: 600;
            transition: background 0.2s, color 0.2s;
        }
        .buyer-menu-link:hover, .buyer-menu-link.active {
            background: #27ae60;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="buyer-menu-container">
        <div class="buyer-profile">
            <div class="buyer-avatar">
                <img src="~/images/avatar-default.png" alt="Avatar" />
            </div>
            <div class="buyer-info">
                <div class="title">Tài khoản của</div>
                <div class="name">Nguyễn Duy Thành</div>
            </div>
        </div>
        <ul class="buyer-menu-list">
            <li><a class="buyer-menu-link active" href="#">Thông tin tài khoản</a></li>
            <li><a class="buyer-menu-link" href="#">Đổi mật khẩu</a></li>
            <li><a class="buyer-menu-link" href="#">Thông báo của tôi</a></li>
            <li><a class="buyer-menu-link" href="#">Quản lí đơn hàng</a></li>
            <li><a class="buyer-menu-link" href="#">Sổ địa chỉ</a></li>
            <li><a class="buyer-menu-link" href="#">Ví</a></li>
            <li><a class="buyer-menu-link" href="#">Đánh giá sản phẩm</a></li>
        </ul>
    </div>
</body>
</html> 