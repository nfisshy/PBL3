<!-- Link Font Awesome (chèn vào <head> nếu chưa có) , được tải từ internet , giúp giảm tải cho server-->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<style>
    .seller-menu-container {
        width: 100%;
        max-width: 300px;
        background-color: #1c1c1c;
        color: #e8f5e9;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        font-family: 'Segoe UI', sans-serif;
    }

    .seller-profile {
        display: flex;
        align-items: center;
        padding: 1rem;
        background-color: #111;
        border-bottom: 1px solid #2e2e2e;
    }

    .seller-avatar img {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #2ecc71;
        margin-right: 1rem;
    }

    .seller-info .title {
        font-size: 0.85rem;
        color: #aaa;
    }

    .seller-info .name {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2ecc71;
    }

    .seller-menu-list {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .seller-menu-link {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 0.9rem 1.2rem;
        text-decoration: none;
        color: #e8f5e9;
        font-size: 1rem;
        transition: background 0.3s, color 0.3s;
        border-bottom: 1px solid #2a2a2a;
    }

    .seller-menu-link:hover {
        background-color: #2ecc71;
        color: #000;
    }

    .seller-menu-link i {
        width: 20px;
        text-align: center;
    }

    .seller-menu-link.active {
        background-color: #27ae60;
        color: #fff;
        font-weight: 600;
    }
</style>

<div class="seller-menu-container">
    <div class="seller-profile">
        <div class="seller-avatar">
            <img src="~/images/avatar-default.png" alt="Avatar" />
        </div>
        <div class="seller-info">
            <div class="title">Gian hàng của</div>
            <div class="name">CDT Seller</div>
        </div>
    </div>
    <ul class="seller-menu-list">
        <li><a class="seller-menu-link" href="#"><i class="fas fa-user"></i> Thông tin cá nhân</a></li>
        <li><a class="seller-menu-link" href="#"><i class="fas fa-lock"></i> Đổi mật khẩu</a></li>
        <li><a class="seller-menu-link" href="#"><i class="fas fa-wallet"></i> Ví</a></li>
    </ul>
</div>
